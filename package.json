{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna run start --parallel --stream",
    "build": "lerna run build",
    "lint": "lerna run lint --parallel --stream",
    "publish": "lerna publish",
    "bootstrap": "lerna bootstrap --hoist",
    "lerna:add": "lerna add",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1"
  },
  "lint-staged": {
    "*.{css,js,jsx,ts,tsx,yaml,yml,md}": "prettier --write"
  }
}
